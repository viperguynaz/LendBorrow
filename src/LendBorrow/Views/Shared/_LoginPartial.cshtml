@using System.Security.Principal

@if (User.Identity.IsAuthenticated)
{
    <ul class="nav navbar-nav pull-right">
        <li class="nav-item"><a class="nav-link">Hello, @User.Identity.Name</a></li>
        <li class="nav-item">@Html.ActionLink("Log Out", "LogOff", "Account", null, new { @class = "nav-link" })</li>
    </ul>
}
else
{
    <ul class="nav navbar-nav pull-right">
        <li class="nav-item">@Html.ActionLink("Sign in", "SignIn", "Account", null, new { @class = "nav-link" })</li>
        <li class="nav-item">@Html.ActionLink("Sign up", "SignUp", "Account", null, new { @class = "nav-link" })</li>
    </ul>
}
